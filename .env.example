# payment.statex.cz Payment Platform - Environment Variables
# This file contains all environment variables for the platform
# DO NOT commit this file to version control

# =============================================================================
# Common Variables (All Services)
NODE_ENV=production
SERVICE_NAME=payment.statex.cz

# Docker Compose Port Configuration
FRONTEND_PORT=3000
API_GATEWAY_PORT=3001
NGINX_NETWORK_NAME=nginx-network

# Database shared Configuration
# Production database server: db-server-postgres (container name)
# Database is accessible via nginx-network Docker network
DB_HOST=db-server-postgres
DB_PORT=5432
DB_USER=dbadmin
DB_PASSWORD=password_for_database
DB_NAME=payment
DB_SYNC=false

# JWT Configuration
JWT_SECRET=super-puper-secret-lots-of-bits-secret-mega-key
JWT_EXPIRES_IN=7d

# Service URLs
# Production website: https://payment.statex.cz
API_URL=http://api-gateway:3001
FRONTEND_URL=https://payment.statex.cz
CORS_ORIGIN=https://payment.statex.cz

# Notifications external shared service settings
NOTIFICATION_SERVICE_URL=https://notifications.statex.cz

# External shared auth microservice settings
AUTH_SERVICE_URL=https://auth.statex.cz

# PayU Payment Gateway Configuration
PAYU_MERCHANT_ID=your-payu-merchant-id
PAYU_POS_ID=your-payu-pos-id
PAYU_CLIENT_ID=your-payu-client-id
PAYU_CLIENT_SECRET=your-payu-client-secret
PAYU_API_URL=https://secure.payu.com/api/v2_1
PAYU_SANDBOX=false

# Frontend (Next.js) Public Variables
NEXT_PUBLIC_API_URL=https://payment.statex.cz/api
NEXT_PUBLIC_FRONTEND_URL=https://payment.statex.cz
NEXT_PUBLIC_PAYU_POS_ID=your-payu-pos-id

# Logging Microservice Configuration
LOGGING_SERVICE_URL=https://logging.statex.cz
LOG_LEVEL=debug
